    <script>
        function alphaOnly(event) {
            var key = event.keyCode;
            return ((key >= 65 && key <= 90) || key == 8);
        }

        function addBrand() {
            const BrandText = document.getElementById('NewBrand').value;
            if(!BrandText || BrandText === "") return;
            const BrandList = document.getElementById('BrandList');

            //Create element
            const Row = document.createElement("tr");
            const Cell = document.createElement("td");
            const RealOne = document.createElement("input");
            Cell.appendChild(RealOne);
            Row.appendChild(Cell);
            //initiate
            RealOne.name = "addedBrands[]";
            RealOne.value = BrandText;
            RealOne.className = "form-control";
            const deleteButton = this.DeleteButton(Row);
            const DeleteCell = document.createElement("td");
            DeleteCell.appendChild(deleteButton);
            Row.appendChild(DeleteCell);

            //new line
            BrandList.appendChild(Row);
        }

        function DeleteButton(RowToDelete) {
            const button = document.createElement("button");
            button.className = "btn";
            button.textContent = "Xóa";
            button.type = "button";
            button.onclick = (ehandlers, e) => {
                RowToDelete.remove();
            }
            return button;
        }
    </script>