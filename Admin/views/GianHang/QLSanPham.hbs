        <div class="product-status mg-tb-15">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="product-status-wrap">
                            <h4>Danh sách {{category.DisplayName}}
                            </h4>
                            <div class="add-product">
                                <a href="/categories/{{category.Type}}/products/add?category={{category.Type}}">Thêm {{category.DisplayName}}</a>
                            </div>
                            <table>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Hãng</th>
                                    <th>Dòng sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tình trạng</th>
                                    <th>Chỉnh sửa</th>
                                </tr>
                                {{#each products}}
                                    <tr>
                                        <td><img src={{this.Image}} alt="" /></td>
                                        <td>{{this.Brand}}</td>
                                        <td>{{this.Name}}</td>
                                        <td>{{this.SimpleDetail}}</td>
                                        <td>{{this.Cost}}</td>
                                        <td>{{this.Quantity}}</td>
                                        <td>
                                            {{#activityState this.isDelete}}
                                            {{/activityState}}
                                        </td>
                                        <td>
                                            <form method="POST" action="#" style="display: inline-block;">
                                            <button data-toggle="tooltip" title="Edit" class="pd-setting-ed" name="edit" value={{this._id}}><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                            {{#if this.isDelete}}
                                                <button data-toggle="tooltip" title="Phục hồi" class="pd-setting-ed" name="recover" value={{this._id}}><i class="fa fa-undo" aria-hidden="true"></i></button>
                                            {{else}}
                                                <button data-toggle="tooltip" title="Xoá" class="pd-setting-ed" name="delete" value={{this._id}}><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                            {{/if}}
                                            </form>
                                        </td>
                                    </tr>
                                {{/each}}
                               
                            </table>
                            <div class="custom-pagination">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        {{#pagination min currentPage max totalPages link query}} 
                                        {{/pagination}}
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>