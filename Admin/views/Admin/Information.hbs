    <div class="single-pro-review-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="review-tab-pro-inner">
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">

                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            {{#if success_msg }}
                                            <div class="alert alert-success alert-dismissible show" role="alert">
                                                <strong>{{this.success_msg}}</strong>
                                                <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            {{/if}}
                                            <h1>Thông tin cá nhân</h1>
                                            <form action='/admin/information/change-information' method="POST">
                                                <div class="input-group mg-b-pro-edt">
                                                    <span
                                                        class="input-group-addon"><b>Tên&emsp;&emsp;&emsp;&emsp;&emsp;&nbsp;</b></span>
                                                    <input name="Name" type="text" class="form-control"
                                                        placeholder="Tên" value="{{user.Name}}">
                                                </div>
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><b>Địa
                                                            chỉ&emsp;&emsp;&emsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></span>
                                                    <input name="Address" type="text" class="form-control"
                                                        placeholder="Địa chỉ" value="{{user.Address}}">
                                                </div>
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><b>Số điện thoại&emsp;</b></span>
                                                    <input name="Phone" type="number" class="form-control"
                                                        placeholder="Số điện thoại" value="{{user.Phone}}">
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                            <button data-toggle="tooltip" name="ID" type="submit"
                                                                class="btn btn-primary waves-effect waves-light m-r-10">Thay
                                                                đổi
                                                            </button>
                                                            <a href="/categories/{{Category}}/products"><button
                                                                    type="button"
                                                                    class="btn btn-warning waves-effect waves-light">Đóng
                                                                </button></a>

                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">

                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="review-content-section">
                                            {{#if success_msg }}
                                            <div class="alert alert-success alert-dismissible show" role="alert">
                                                <strong>{{this.success_msg}}</strong>
                                                <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            {{/if}}
                                            {{#if error_msg }}
                                            <div class="alert alert-error alert-dismissible show" role="alert">
                                                <strong>{{this.error_msg}}</strong>
                                                <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            {{/if}}
                                            <h1>Thay đổi mật khẩu</h1>
                                            <form action='/admin/information/change-password' method="POST">
